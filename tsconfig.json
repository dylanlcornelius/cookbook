{
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictTemplates": true
  },
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@sharedModule": ["src/app/shared/shared.module"],
      "@model": ["src/app/shared/model"],
      "@utilService": ["src/app/shared/util.service"],
      "@firestoreService": ["src/app/shared/firestore.service"],
      "@modalService": ["src/app/shared/modal.service"],
      "@notification": ["src/app/shared/notification-modal/notification.model"],
      "@validation": ["src/app/shared/validation-modal/validation.model"],
      "@config": ["src/app/admin/shared/config.model"],
      "@configService": ["src/app/admin/shared/config.service"],
      "@imageService": ["src/app/util/image.service"],
      "@UOMConverson": ["src/app/ingredient/shared/uom.enum.ts"],
      "@navigation": ["src/app/header/navigation.model"],
      "@navigationService": ["src/app/header/navigation.service"],
      "@recipe": ["src/app/recipe/shared/recipe.model"],
      "@recipeService": ["src/app/recipe/shared/recipe.service"],
      "@recipeIngredientModal": ["src/app/shared/recipe-ingredient-modal/recipe-ingredient-modal.model"],
      "@recipeIngredientService": ["src/app/recipe/shared/recipe-ingredient.service"],
      "@recipeFilterService": ["src/app/recipe/shared/recipe-filter.service"],
      "@recipeHistory": ["src/app/recipe/shared/recipe-history.model"],
      "@recipeHistoryService": ["src/app/recipe/shared/recipe-history.service"],
      "@ingredient": ["src/app/ingredient/shared/ingredient.model"],
      "@ingredientService": ["src/app/ingredient/shared/ingredient.service"],
      "@userIngredient": ["src/app/shopping/shared/user-ingredient.model"],
      "@userIngredientService": ["src/app/shopping/shared/user-ingredient.service"],
      "@userItem": ["src/app/shopping/shared/user-item.model"],
      "@userItemService": ["src/app/shopping/shared/user-item.service"],
      "@user": ["src/app/user/shared/user.model"],
      "@userService": ["src/app/user/shared/user.service"],
      "@currentUserService": ["src/app/user/shared/current-user.service"],
      "@actions": ["src/app/profile/shared/action.enum"],
      "@actionService": ["src/app/profile/shared/action.service"]
    }
  }
}
